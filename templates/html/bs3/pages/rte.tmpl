<!-- Start: rte.tmpl -->

[% INCLUDE common/noscript_js_necessary.tmpl %]

[% rollup_id = "info_header" %]
[% rollup_anchor = "Information about Remote Term Enrichment" %]
[% INCLUDE "common/info_rollup_start.tmpl" %]
<p>
  The Remote Term Enrichment tool is currently a test harness for
  rendering remote term enrichment resources.
</p>
[% INCLUDE "common/info_rollup_end.tmpl" %]

<div class="panel panel-default">
  <!-- <div class="panel-heading"> -->
  <!--   <h3 class="panel-title">Input</h3> -->
  <!-- </div> -->
  <div class="panel-body">

    <form role="form" method="GET" action="[% interlink_rte %]">

      <div class="form-group">
	<label for="rte_input">Gene IDs</label>
	<textarea
	   id="rte_input"
	   class="form-control[% IF NOT rte_input AND NOT first_time_p %] has-error[% END %]"
	   rows="3"
	   placeholder="Gene IDs..."
	   name="input">[% rte_input %]</textarea>
      </div>
      
      <div class="form-group">
	<label for="species">Species</label>
	<select
	   id="species"
	   class="form-control"
	   name="species">
	  <option value="HUMAN">HUMAN</option>
	</select>
      </div>

      <div class="form-group">
	<label for="rte_ontology">Ontology</label>
	<select
	   id="rte_ontology"
	   class="form-control"
	   name="ontology">
	  <option value="biological_process">biological process</option>
	  <option value="molecular_function">molecular function</option>
	  <option value="cellular_component">cellular component</option>
	</select>
      </div>

      <div class="form-group">
	<label for="label_corr">Correction</label>
	<div id="label_corr" class="radio">
	  <label for="rte_correction">
	    <input
	       type="radio"
	       name="correction"
	       id="rte_correction"
	       value="bonferonni"
	       checked="checked" />
	    Use Bonferroni correction</label>
	</div>
      </div>

      <div class="form-group">
	<label for="rte_format">Results format</label>
	<select
	   id="rte_format"
	   class="form-control"
	   name="format">
	  <option value="xml">XML</option>
	  <!-- <option value="html">HTML</option> -->
	</select>
      </div>
      
      <div class="form-group">
	<label for="rte_resource">Resource</label>
	<select
	   id="rte_resource"
	   class="form-control"
	   name="resource">
	  <option value="PANTHER">PANTHER</option>
	</select>
      </div>

      <button type="submit" class="btn btn-default">Submit</button>
    </form>

  </div>
</div>
<!-- End: rte.tmpl -->
